package in.debasish.VariablesandMethods;

import java.util.Scanner;

public class ScannerClassAssighments2{
	
	
	int multiply(int a,int b) {
		
		return a*b;
	}
	
	int sum(int a,int b) {
		
		return a+b;
	}
	
	int subtraction(int a,int b) {
		
		return a-b;
	}
	
	int division(int a,int b) {
		
		return a/b;
	}

	public static void main(String[] args) {

		
		ScannerClassAssighments2 sca1=new ScannerClassAssighments2();
		Scanner sc=new Scanner(System.in);
		
		System.out.println("Enter the value of x1:");
		int x1=sc.nextInt();
		
		System.out.println("Enter the value of x2:");
		int x2=sc.nextInt();
		
		int multiRes=sca1.multiply(x1, x2);
		
		System.out.println("Enter the value of x3:");
		int x3=sc.nextInt();
		
		int sumRes1=sca1.sum(multiRes, x3);
		
		System.out.println("Enter the value of x4:");
		int x4=sc.nextInt();
		
		int subRes=sca1.subtraction(sumRes1, x4);
		
		System.out.println("Enter the value of x5:");
		int x5=sc.nextInt();
		
		int sumRes2=sca1.sum(x5, subRes);
		
		System.out.println("Enter the value of x6:");
		int x6=sc.nextInt();
		
		int divRes=sca1.division(sumRes2,x6);
		
		System.out.println("The final result after division is:"+divRes);
		
	}

}
